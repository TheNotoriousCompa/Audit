{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src/main",
    "outDir": "dist/main",
    "noEmit": false,
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "electron"],
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules", "src/preload", "dist"]
}
