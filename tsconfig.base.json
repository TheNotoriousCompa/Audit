{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": false,
    "types": ["node", "electron"],
    "lib": ["ES2022", "DOM"]
  }
}
